<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Remove', user, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= h user.login %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>