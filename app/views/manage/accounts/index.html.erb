<h1>Listing accounts</h1>

<table>
  <tr>
    <th></th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= link_to 'Show', account %>
    <%= link_to 'Edit', edit_account_path(account) %>
    <%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= h account.firstname %></td>
    <td><%= h account.lastname %></td>
    <td><%= h account.email %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New account', new_account_path %>